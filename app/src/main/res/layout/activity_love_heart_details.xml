<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:ignore="UselessParent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="center_horizontal"
                android:textColor="@color/tc"
                android:textSize="@dimen/sp_16"
                tools:text="爱心筹集" />

            <TextView
                android:id="@+id/titleTimeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="center_horizontal"
                android:textColor="@color/tc_list_sub"
                android:textSize="@dimen/sp_12"
                tools:text="2019-01-11" />

            <TextView
                android:id="@+id/contentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="center_horizontal"
                android:textColor="@color/tc"
                android:textSize="@dimen/sp_14"
                tools:text="爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集爱心筹集" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/showAllBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_13"
                android:text="点击查看原文" />

            <TextView
                android:id="@+id/fromFlagTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/tc_list_sub"
                android:textSize="@dimen/sp_13"
                android:text="信息来源：" />

            <TextView
                android:id="@+id/fromValueTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/showAllBtn"
                android:layout_toEndOf="@+id/fromFlagTv"
                android:textColor="@color/tc"
                android:textSize="@dimen/sp_13"
                tools:text="水滴筹" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>