<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/app_bg"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/pointIv"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:src="@drawable/shape_point_gray"/>

        <LinearLayout
                android:id="@+id/itemRootView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_10"
                android:background="@drawable/selector_bg_white_square_round"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/typeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tc_list_title"
                    android:textSize="@dimen/sp_16"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="场所名称场所名称场所名称场所"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/moreIcon"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/more_gray"/>


                <TextView
                        android:id="@+id/infoTv"
                        android:layout_toStartOf="@+id/moreIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:textColor="@color/tc_list_sub"
                        android:textSize="@dimen/sp_13"
                        android:maxLines="3"
                        android:ellipsize="end"
                        tools:text="场所地址场所地址场所地址场所地址场场所地址场所地址场所地址场所地址场场所地址场所地址场所地址场所地址场"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
            android:id="@+id/lastLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/app_bg"/>
</LinearLayout>