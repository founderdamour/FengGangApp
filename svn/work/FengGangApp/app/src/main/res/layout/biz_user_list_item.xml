                android:layout_gravity="center_horizontal"
                android:padding="@dimen/dp_6"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_12"
                android:singleLine="true"
                tools:text="婚姻" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>