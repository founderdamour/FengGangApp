<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_10">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/tc_list_sub"
        android:textSize="@dimen/sp_14"
        tools:text="3.固定住所的房屋租赁登记备案证明或者相关证 明材料(租房合同、购房合同、房屋产权证明、居 住证明四种材料的一种)" />

    <TextView
        android:id="@+id/contentTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:textColor="@color/tc_list_title"
        android:textSize="@dimen/sp_14"
        tools:text="固定住所的房屋租赁登记备案证明或者相关证明 材料的原件及复印件一份。相关证明材料特指租 房合同、房屋产权证明、居住证明" />

</LinearLayout>
