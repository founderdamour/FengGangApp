<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar_normal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item0Layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_56"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/brbl_icon01"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="婚姻登记预约"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item1Layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/brbl_icon03"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="残疾证预约"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item3Layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/mine_bj"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="取件预约"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item2Layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/brbl_icon02"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="更多预约，敬请期待"
                android:textColor="@color/tc_list_sub"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>