<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar_normal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_16">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="预约时间："
                    android:textColor="@color/tc_list_sub"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/oderTimeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sp_14"
                    tools:text="2018年12月12日 下午13:30-17:30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_6"
                android:paddingEnd="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="预约窗口："
                    android:textColor="@color/tc_list_sub"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/oderAddTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sp_14"
                    tools:text="遵义市汇川区政务服务中心汇川区民政民政民政民政民政" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@color/white"
                android:minHeight="@dimen/dp_48"
                android:paddingStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:id="@+id/userNameFlagTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="预约姓名"
                    android:textColor="@color/tc_list_title"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/userNameValueTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_36"
                    android:layout_toEndOf="@+id/userNameFlagTv"
                    android:background="@color/transparent"
                    android:enabled="false"
                    android:hint="请输入预约人姓名"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/tc_list_sub"
                    android:textSize="@dimen/sp_14"
                    android:text="管理员" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/app_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="@dimen/dp_48"
                android:paddingStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:id="@+id/userIDFlagTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="身份证号"
                    android:textColor="@color/tc_list_title"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/userIDValueTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_36"
                    android:layout_toEndOf="@+id/userIDFlagTv"
                    android:background="@color/transparent"
                    android:enabled="false"
                    android:hint="请填写18位身份证号码"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/tc_list_sub"
                    android:textSize="@dimen/sp_14"
                    android:text="888888888888888888" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/app_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="@dimen/dp_48"
                android:paddingStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:id="@+id/userPhoneFlagTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联系电话"
                    android:textColor="@color/tc_list_title"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/userPhoneValueTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_36"
                    android:layout_toEndOf="@+id/userPhoneFlagTv"
                    android:background="@color/transparent"
                    android:enabled="false"
                    android:hint="请输入联系电话"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/tc_list_sub"
                    android:textSize="@dimen/sp_14"
                    android:text="18888888888" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:background="@color/app_bg" />

            <TextView
                android:id="@+id/submitBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginStart="@dimen/dp_36"
                android:layout_marginEnd="@dimen/dp_36"
                android:background="@color/colorAccent"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:text="提 交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:background="@color/app_bg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:padding="@dimen/dp_16"
                android:text="提示：每位用户每天只可以预约一次，其中同一身份证号码或手机号码被认为同一用户。确认预约时表示您已同意《预约系统使用规定》。现场办理需要携带的材料请参考《办理事项及相关材料列表》。
因特殊情况不能办理业务，请及时取消预约。预约办理时间前24小时内不能取消。如未取消也未到场办理的，视为践约，拉入黑名单，三个月不得再次进行预约。一个月累计取消三次，视为践约，拉入黑名单。"
                android:textColor="@color/tc_list_sub"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>