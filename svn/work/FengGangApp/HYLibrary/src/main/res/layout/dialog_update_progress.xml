<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_color"
    android:minWidth="300dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/title_tick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dm010"
            android:text="提示"
            android:textColor="@color/app_theme_style_color"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/dm030"
            android:paddingStart="@dimen/dm030">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本："
                android:textColor="#888888"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/versionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="v 1.0.3"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm010"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/dm030"
            android:paddingStart="@dimen/dm030">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大小："
                android:textColor="#888888"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/fileSizeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="69.1MB"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm010"
            android:layout_marginTop="@dimen/dm010"
            android:orientation="vertical"
            android:paddingEnd="@dimen/dm030"
            android:paddingStart="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更新："
                android:textColor="#888888"
                android:textSize="@dimen/sp_14" />

            <com.zkhy.library.widget.MaxHeightScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none">

                <TextView
                    android:id="@+id/describeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/dm006"
                    android:ellipsize="end"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新更新" />

            </com.zkhy.library.widget.MaxHeightScrollView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm020"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dm030"
        android:paddingStart="@dimen/dm030">

        <TextView
            android:id="@+id/cancel_down"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dm010"
            android:layout_weight="1"
            android:background="@drawable/selector_white_gray_dialog_bg"
            android:enabled="true"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:paddingTop="12dp"
            android:text="暂不更新"
            android:textColor="@color/tc_list_sub"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/ok_down"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dm010"
            android:layout_weight="1"
            android:background="@drawable/selector_white_gray_dialog_bg"
            android:enabled="true"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:paddingTop="12dp"
            android:text="立即更新"
            android:textColor="@color/app_theme_style_color"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>