<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title_bar_comm"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_50"
            android:src="@mipmap/get_ver_code_icon"/>

    <TextView
            android:id="@+id/tipTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/tc_list_sub"
            android:textSize="@dimen/sp_18"
            tools:text="验证码已发送至182****2704，请查收"/>

    <com.zkhy.fenggang.community.view.custom.VerificationCodeView
            android:id="@+id/verCodeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            app:icv_et_width="@dimen/dp_40"
            app:icv_et_number="6"/>

    <TextView
            android:id="@+id/submitVerCodeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_40"
            android:background="@drawable/sure_selector_bg"
            android:gravity="center"
            android:enabled="false"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"/>

</LinearLayout>