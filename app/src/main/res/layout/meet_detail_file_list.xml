<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_46"
    android:background="@drawable/selector_bg_white_square"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/meetFileFlag"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:padding="@dimen/dp_10"
        android:src="@drawable/meet_file_flag" />

    <ImageView
        android:id="@+id/moreIcon"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:padding="@dimen/dp_10"
        android:src="@drawable/meet_file_more_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/moreIcon"
        android:layout_toEndOf="@id/meetFileFlag"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fileNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/tc_1"
            android:textSize="@dimen/sp_14"
            tools:text="关于第一季度支部党员会议的通知关于第一季度支部党员会议的通知.pdf" />

        <TextView
            android:id="@+id/fileSizeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tc_2"
            android:textSize="@dimen/sp_12"
            tools:text="12.56 KM" />
    </LinearLayout>
</RelativeLayout>