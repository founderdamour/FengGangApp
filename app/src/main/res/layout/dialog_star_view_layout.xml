<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_color"
    android:minWidth="@dimen/dp_350"
    android:layout_margin="@dimen/dp_20"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/title_tick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dm010"
            android:text="星级评价"
            android:textColor="@color/app_theme_style_color"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_20">

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar"
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4"
                android:theme="@style/RatingBar"
                android:stepSize="1" />

            <TextView
                android:id="@+id/ratingDescTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:gravity="center_horizontal"
                android:text="比较满意，仍可改善"
                android:textColor="#f2c530"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm020"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dm030"
        android:paddingEnd="@dimen/dm030">

        <TextView
            android:id="@+id/cancel_down"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dm010"
            android:layout_weight="1"
            android:background="@drawable/selector_white_gray_dialog_bg"
            android:enabled="true"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingTop="12dp"
            android:paddingEnd="24dp"
            android:paddingBottom="12dp"
            android:text="取消评分"
            android:textColor="@color/tc_list_sub"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/ok_down"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dm010"
            android:layout_weight="1"
            android:background="@drawable/selector_white_gray_dialog_bg"
            android:enabled="true"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingTop="12dp"
            android:paddingEnd="24dp"
            android:paddingBottom="12dp"
            android:text="确认提交"
            android:textColor="@color/app_theme_style_color"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>