<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/line_height"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bg"
        android:gravity="center_vertical"
        android:minHeight="42dp"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_white_square"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"

            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="@dimen/dp_10"
                android:text="在线"
                android:textColor="#66B966"
                android:textSize="@dimen/sp_12" />

            <com.sinothk.view.image.rounded.RoundedImageView
                android:id="@+id/tb1AvatarIv"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/mr_tx"
                app:riv_border_color="#FFF"
                app:riv_border_width="2dp"
                app:riv_corner_radius="10dp"
                app:riv_mutate_background="false"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/tb1NameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/tc"
                android:textSize="@dimen/sp_14"
                tools:text="令狐迎" />

            <TextView
                android:id="@+id/tb1WorkAgeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/tc_list_sub"
                android:textSize="@dimen/sp_12"
                tools:text="资深" />

            <TextView
                android:id="@+id/tb1WorkSkillTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/dp_6"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_12"
                android:singleLine="true"
                tools:text="婚姻" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="match_parent"
            android:background="@color/app_bg" />

        <LinearLayout
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_white_square"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"

            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="@dimen/dp_10"
                android:text="在线"
                android:textColor="#66B966"
                android:textSize="@dimen/sp_12" />

            <com.sinothk.view.image.rounded.RoundedImageView
                android:id="@+id/tb2AvatarIv"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/mr_tx"
                app:riv_border_color="#FFF"
                app:riv_border_width="2dp"
                app:riv_corner_radius="10dp"
                app:riv_mutate_background="false"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/tb2NameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/tc"
                android:textSize="@dimen/sp_14"
                tools:text="令狐迎" />

            <TextView
                android:id="@+id/tb2WorkAgeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/tc_list_sub"
                android:textSize="@dimen/sp_12"
                tools:text="资深" />

            <TextView
                android:id="@+id/tb2WorkSkillTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/dp_6"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_12"
                android:singleLine="true"
                tools:text="婚姻" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="match_parent"
            android:background="@color/app_bg" />

        <LinearLayout
            android:id="@+id/tab3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_white_square"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="@dimen/dp_10"
                android:text="在线"
                android:textColor="#66B966"
                android:textSize="@dimen/sp_12" />

            <com.sinothk.view.image.rounded.RoundedImageView
                android:id="@+id/tb3AvatarIv"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/mr_tx"
                app:riv_border_color="#FFF"
                app:riv_border_width="2dp"
                app:riv_corner_radius="10dp"
                app:riv_mutate_background="false"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/tb3NameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/tc"
                android:textSize="@dimen/sp_14"
                tools:text="令狐迎" />

            <TextView
                android:id="@+id/tb3WorkAgeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/tc_list_sub"
                android:textSize="@dimen/sp_12"
                tools:text="资深" />

            <TextView
                android:id="@+id/tb3WorkSkillTv"
                android:layout_width="wrap_content"
