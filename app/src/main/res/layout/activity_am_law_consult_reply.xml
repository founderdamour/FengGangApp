<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.main.am.AmLawConsultAddActivity">

    <include layout="@layout/title_bar_comm" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <com.sinothk.view.image.rounded.RoundedImageView
                        android:id="@+id/userAvatarIv"
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_marginBottom="@dimen/dp_6"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mr_tx"
                        app:riv_border_color="#FFF"
                        app:riv_border_width="2dp"
                        app:riv_corner_radius="10dp"
                        app:riv_mutate_background="false"
                        app:riv_oval="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_12"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userNameTv"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="赵伟律师"
                            android:textColor="@color/tc"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/timeTv"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="5个小时"
                            android:textColor="@color/tc_list_sub"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/contentTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_56"
                    android:gravity="center_vertical"
                    android:textColor="@color/tc"
                    android:textSize="@dimen/sp_14"
                    tools:text="HelloHelloHelloHello" />
            </LinearLayout>

            <EditText
                android:id="@+id/contentEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@color/white"
                android:gravity="top|start"
                android:hint="请输入回复内容 ......"
                android:maxLines="7"
                android:minLines="5"
                android:scrollbars="vertical"
                android:padding="@dimen/dp_10"
                android:textColor="@color/tc_list_title"
                android:textColorHint="@color/tc_list_sub"
                android:textSize="@dimen/sp_14"
                tools:text="进啊实打实大大飒飒大师大师大师的撒的撒的权威的出现在操作相册新增进啊实打实大大飒飒大师大师大师的撒的撒的权威的出现在操作相册新增进啊实打实大大飒飒大师大师大师的撒的撒的权威的出现在操作相册新增进啊实打实大大飒飒大师大师大师的撒的撒的权威的出现在操作相册新增进啊实打实大大飒飒大师大师大师的撒的撒的权威的出现在操作相册新增进啊实打实大大飒飒大师大师大师的撒的撒的权威的出现在操作相册新增进啊实打实大大飒飒大师大师大师的撒的撒的权威的出现在操作相册新增进啊实打实大大飒飒大师大师大师的撒的撒的权威的出现在操作相册新增进啊实打实大大飒飒大师大师大师的撒的撒的权威的出现在操作相册新增进啊实打实大大飒飒大师大师大师的撒的撒的权威的出现在操作相册新增" />

            <TextView
                android:id="@+id/submitBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@color/colorAccent"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:text="立即发布"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>