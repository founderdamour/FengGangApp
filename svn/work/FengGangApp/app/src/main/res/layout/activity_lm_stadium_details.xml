<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20">

            <TextView
                android:id="@+id/nameFlagTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="场所名称"
                android:textColor="@color/tc_list_sub"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/nameValueTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_toEndOf="@+id/nameFlagTv"
                android:gravity="right"
                android:maxLines="1"
                android:textColor="@color/tc_list_title"
                android:textSize="@dimen/sp_14"
                tools:text="1111" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/app_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:background="@color/white"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20">

            <TextView
                android:id="@+id/statusFlagTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="场所状态"
                android:textColor="@color/tc_list_sub"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/statusValueTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_toEndOf="@+id/statusFlagTv"
                android:gravity="right"
                android:maxLines="1"
                android:textColor="@color/tc_list_title"
                android:textSize="@dimen/sp_14"
                tools:text="1111" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/app_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:background="@color/white"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20">

            <TextView
                android:id="@+id/galleryFlagTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="容纳人数"
                android:textColor="@color/tc_list_sub"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/galleryValueTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_toEndOf="@+id/galleryFlagTv"
                android:gravity="right"
                android:maxLines="1"
                android:textColor="@color/tc_list_title"
                android:textSize="@dimen/sp_14"
                tools:text="1111" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/app_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:background="@color/white"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20">

            <TextView
                android:id="@+id/payFlagTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="是否收费"
                android:textColor="@color/tc_list_sub"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/payValueTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_toEndOf="@+id/payFlagTv"
                android:gravity="right"
                android:maxLines="1"
                android:textColor="@color/tc_list_title"
                android:textSize="@dimen/sp_14"
                tools:text="1111" />
        </RelativeLayout>

        <View
            android:id="@+id/payInfoLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/app_bg" />

        <RelativeLayout
            android:id="@+id/payInfoItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:background="@color/white"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20"
            android:visibility="visible">

            <TextView
                android:id="@+id/payInfoFlagTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="收费介绍"
                android:textColor="@color/tc_list_sub"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/payInfoValueTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_toEndOf="@+id/payInfoFlagTv"
                android:gravity="right"
                android:maxLines="1"
                android:textColor="@color/tc_list_title"
                android:textSize="@dimen/sp_14"
                tools:text="1111" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/app_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="体育项目"
                android:textColor="@color/tc_list_sub"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/sportObjTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:paddingStart="@dimen/dp_20"
                tools:text="乒乓球"
                android:textColor="@color/tc_list_title"
                android:textSize="@dimen/sp_14"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/app_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="场所地址"
                android:textColor="@color/tc_list_sub"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/stadiumAddTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:paddingStart="@dimen/dp_20"
                android:textColor="@color/tc_list_title"
                android:textSize="@dimen/sp_14"
                tools:ignore="RtlSymmetry"
                tools:text="地址地址地址地址地址地址地址地址...." />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/app_bg" />


    </LinearLayout>
</ScrollView>
